<section id="galerie-statica">
    <h2>Galerie</h2>
    <div id="grid-galerie">
        <% for (let imag of locals.imagini){  %>
             <figure class = "<%-imag.class%>">
            <picture>
                <source srcset="/<%-imag.mic%>" media="(max-width:700px)"/>
                <img src="/<%-imag.mare%>" alt="<%-imag.descriere%>"/>
            </picture>
            <figcaption><%-imag.titlu%></figcaption>
        </figure>
        <% } %>
    </div>
</section>